<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">
  
  <Id>12345678-paytm-safesend-outlook-gmail</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>PayTM</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="PayTM Safe Send"/>
  <Description DefaultValue="Warning for external email recipients - Works with Gmail in Outlook"/>
  
  <Hosts>
    <Host xsi:type="MailHost">
      <DesktopFormFactor>
        <FunctionFile resid="functionFile"/>
        <ExtensionPoint xsi:type="MessageComposeCommandSurface">
          <OfficeTab id="TabDefault">
            <Group id="msgComposeGroup">
              <Label resid="groupLabel"/>
              <Control xsi:type="Button" id="composeButton">
                <Label resid="buttonLabel"/>
                <Supertip>
                  <Title resid="buttonLabel"/>
                  <Description resid="buttonDesc"/>
                </Supertip>
                <Action xsi:type="ShowTaskPane">
                  <SourceLocation resid="taskPaneUrl"/>
                </Action>
              </Control>
            </Group>
          </OfficeTab>
        </ExtensionPoint>
      </DesktopFormFactor>
    </Host>
  </Hosts>

  <Permissions>ReadWriteItem</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
                    xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="functionFile"/>
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="groupLabel"/>
                <Control xsi:type="Button" id="composeButton">
                  <Label resid="buttonLabel"/>
                  <Supertip>
                    <Title resid="buttonLabel"/>
                    <Description resid="buttonDesc"/>
                  </Supertip>
                  <Action xsi:type="ShowTaskPane">
                    <SourceLocation resid="taskPaneUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="data:image/svg+xml;base64,"/>
        <bt:Image id="icon32" DefaultValue="data:image/svg+xml;base64,"/>
        <bt:Image id="icon80" DefaultValue="data:image/svg+xml;base64,"/>
      </bt:Images>

      <bt:Urls>
        <!-- IMPORTANT: Update YOUR-USERNAME to match your GitHub username -->
        <bt:Url id="functionFile" DefaultValue="https://raw.githubusercontent.com/vikash3pandey-sys/outlook-alerts/main/functions_safesend.html"/>
        <bt:Url id="taskPaneUrl" DefaultValue="https://raw.githubusercontent.com/vikash3pandey-sys/outlook-alerts/main/taskpane_safesend.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Safety"/>
        <bt:String id="buttonLabel" DefaultValue="Check Recipients"/>
        <bt:String id="buttonDesc" DefaultValue="Verify email recipients are from PayTM domain"/>
      </bt:ShortStrings>

      <bt:LongStrings/>
    </Resources>
  </VersionOverrides>
</OfficeApp>
